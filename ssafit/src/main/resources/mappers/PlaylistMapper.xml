<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.ssafy.ssafit.model.dao.PlaylistDao">
  	<!-- id가 일치하는 playlist를 삭제한다. -->
  	<delete id="deletePlaylistById" parameterType="int">
  		DELETE FROM playlists
  		WHERE id = #{id};
  	</delete>
  	
  	<!-- 새로운 playlist를 삽입한다. -->
  	<insert id="insertPlaylist" parameterType="Playlist" useGeneratedKeys="true">
  		INSERT INTO playlists (user_id, title)
  		VALUES (#{userId}, #{title});
  	</insert>
  	
  	<!-- id가 일치하는 playlist의 모든 속성을 불러온다. -->
  	<select id="selectPlaylist" parameterType="int" resultType="Playlist">
  		SELECT *
  		FROM playlists
  		WHERE id = #{id};
  	</select>
  </mapper>
  