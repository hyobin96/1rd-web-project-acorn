<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<!-- users db에서 사용하는 sql문을 담은 mapper -->
<mapper namespace="com.ssafy.ssafit.model.dao.UserDao">
	<!-- 회원을 등록합니다. 생성된 id를 자동으로 user에 넣습니다. -->
	<insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO users (username, password, email, nickname)
		VALUES (#{username}, #{password}, #{email}, #{nickname});
	</insert>

	<!-- 회원을 소프트삭제합니다. -->
	<update id="updateIsDeleted" parameterType="int">
		UPDATE users
		SET is_deleted = true
		WHERE id = #{id};
	</update>
	
	<!-- 회원을 하드삭제합니다. -->
	<delete id="deleteUserById" parameterType="int">
		DELETE FROM users
		WHERE id = #{id};
	</delete>

	<!-- username이 일치하고 소프트삭제되지 않은 회원을 찾아 username과 암호화된 password, 권한을 반환합니다. -->
	<select id="selectUser" parameterType="LoginRequest" resultType="User">
		SELECT id, username, password, is_admin
		FROM users
		WHERE username = #{username} AND is_deleted = FALSE;
	</select>
</mapper>
